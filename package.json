{
  "name": "wellvantage",
  "version": "1.0.0",
  "private": true,
  "description": "WellVantage - Gym management platform",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "backend": "npm run dev --prefix apps/backend",
    "build": "npm run build --workspaces --if-present",
    "db:generate": "npm run prisma:generate -w @wellvantage/backend",
    "db:push": "npm run prisma:push -w @wellvantage/backend",
    "db:migrate": "npm run prisma:migrate -w @wellvantage/backend",
    "db:studio": "npm run prisma:studio -w @wellvantage/backend"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
